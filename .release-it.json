{
  "increment": "patch",
  "preReleaseId": "beta",
  "buildCommand": "yarn lint && yarn test && yarn docs",
  "safeBump": true,
  "beforeChangelogCommand": false,
  "changelogCommand": "echo TODO",
  "requireCleanWorkingDir": true,
  "requireUpstream": true,
  "src": {
    "commit": true,
    "commitMessage": "Release %s",
    "commitArgs": "",
    "tag": true,
    "tagName": "%s",
    "tagAnnotation": "v%s",
    "push": true,
    "pushArgs": "",
    "pushRepo": null,
    "beforeStartCommand": false,
    "afterReleaseCommand": false,
    "addUntrackedFiles": false
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "Release %s",
    "draft": false,
    "tokenRef": "GITHUB_TOKEN"
  },
  "dist": {
    "repo": false,
    "stageDir": ".stage",
    "baseDir": "dist",
    "files": [
      "**/*"
    ],
    "pkgFiles": null,
    "commit": true,
    "commitMessage": "Release %s",
    "commitArgs": "",
    "tag": true,
    "tagName": "%s",
    "tagAnnotation": "Release %s",
    "push": true,
    "pushArgs": "",
    "beforeStageCommand": false,
    "afterReleaseCommand": false,
    "addUntrackedFiles": false,
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    }
  },
  "prompt": {
    "src": {
      "status": false,
      "publish": true,
      "commit": true,
      "tag": true,
      "push": true,
      "release": false
    },
    "dist": {
      "status": false,
      "commit": true,
      "tag": false,
      "push": true,
      "release": false,
      "publish": false
    }
  }
}